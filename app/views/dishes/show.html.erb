<div class="dish">
  <h1><%= @dish.name %></h1>
  <p><%= @dish.description %></p>
</div>

<div class="ingredients">
  <h3><%= @dish.name %> Ingredients </h3>
  <% @dish.ingredients.each do |ingr| %>
    <li><%= ingr.name %></li>
  <% end %>
</div>

<div class="calories">
  <h3>Calories per dish: <%= @dish.calorie_count %></h3>
</div>

<div class="chef">
  <h3>Made by: <%= @dish.chef.name %></h3>
</div>
